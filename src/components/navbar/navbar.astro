---
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import CallIcon from "@/assets/call.svg"
import Logo from "@/assets/logo.svg"

const menuitems = [
    {
        title: "About",
        path: "#",
    },
    {
        title: "Roofing Solutions",
        path: "#",
        // children: [
        // { title: "Action", path: "/" },
        // { title: "Another action", path: "#" },
        // { title: "Dropdown Submenu", path: "#" },
        // { title: "404 Page", path: "/404" },
        // ],
    },
    {
        title: "Service Areas",
        path: "#",
    },
    {
        title: "Contact",
        path: "#",
    }
]
---

<header class="flex flex-col items-center sticky top-0 bg-white z-10">
    <div class="px-7.5 max-w-(--breakpoint-xl) w-full flex flex-col lg:flex-row justify-between items-center my-2">
        <Astronav>
            <div class="flex w-full lg:w-auto items-center justify-between">
                <a href="/" class="flex justify-center items-center gap-2">
                    <Logo class="w-12" /> 
                    <p class="text-slate-500 font-[oswald] text-2xl font-medium whitespace-nowrap">AER ROOFING</p>
                </a>
                <div class="block lg:hidden">
                    <MenuIcon class="w-4 h-4 text-slate-800" />
                </div>
            </div>
            <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
                <ul class="flex flex-col lg:flex-row lg:gap-3 text-sm text-slate-600">
                {
                    menuitems.map((item, index) => (
                    <>
                        {/* {item.children && (
                        <Dropdown
                            title={item.title}
                            children={item.children}
                            lastItem={index === menuitems.length - 1}
                            client:load
                        />
                        )} */}

                        {/* {!item.children && ( */}
                        {(
                        <li>
                            <a
                            href={item.path}
                            class="flex lg:px-3 py-4 items-center text-sm text-slate-600 hover:text-black">
                            <span> {item.title}</span>
                            </a>
                        </li>
                        )}
                    </>
                    ))
                }
                </ul>
            </MenuItems>
        </Astronav>
        <div>
            <div class="hidden lg:flex items-center gap-4">
                <a href="tel:+12087037764" class="flex items-center gap-2 font-semibold text-orange-600">
                    <CallIcon class="fill-orange-600 w-6" /> (208) 703-7764
                </a>
            </div>
        </div>
    </div>
    <div class="w-full h-px bg-slate-200"></div>
</header>
