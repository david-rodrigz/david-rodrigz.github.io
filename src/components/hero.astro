---
import Container from "@/components/container.astro"
import Form from "@/components/form/Form"
import ShieldHouseIcon from "@/assets/shield_with_house.svg"
import AbSeal from "@/assets/bbb-seal.svg"
---

<Container class="bg-[linear-gradient(180deg,rgba(40,52,66,0.6)_0%,rgba(40,52,66,0.6)_100%),url(./../assets/hero-bg.jpeg)] bg-cover bg-center">
    <main class="w-full max-w-(--breakpoint-xl) grid gap-12 md:grid-cols-3 place-items-center pt-16 pb-8 md:py-16">
        <div class="w-full md:col-span-2">
            <h1
            class="text-white text-[2.5rem]/11 md:text-[3.5rem]/15 font-bold tracking-tight xl:tracking-tighter">
            Trusted Idaho Roofing Experts
            </h1>
            <div class="my-7 h-[3px] w-24 bg-blue-100"></div>
            <p class="text-lg text-slate-100 mt-4 max-w-3xl">
                AER Roofing is a professional Idaho roofing contractor, bringing you reliable service and quality workmanship with 12+ years of experience.
            </p>
            <div class="mt-10 flex flex-row gap-3">
                <AbSeal class="h-14" />
                <div class="flex justify-center items-center">
                     <ShieldHouseIcon class="fill-green-300" />
                     <p class="text-green-200 font-semibold">Idaho Insured &amp; <span class="text-nowrap">Licensed &check;</span></p>
                </div>
            </div>
        </div>
        <div class="w-full min-w-60 bg-white md:col-span-1 rounded-lg px-6 py-4 w-full scroll-mt-20" id="roof-quote">
            <p class="w-full text-center font-semibold text-xl pb-3 text-slate-700">Free Roof Inspection</p>
            <Form client:load />
        </div>
    </main>
</Container>